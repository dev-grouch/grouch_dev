<%= tag.div id: dom_id(contact_form), class: "form__container", data: { stream_exit_class: "success" } do %>
  <%= form_with model: contact_form, url: contact_index_path, local: true do |form| %>
    <% if contact_form.errors.any? %>
      <div class="form__errors" id="error_explanation">
        <h2><%= pluralize(contact_form.errors.count, "error") %> prohibited this contact form from being saved:</h2>
        <ul>
          <% contact_form.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form__field">
      <%= form.label :name, class: "label form__label" %>
      <%= form.text_field :name, class: "input input--text form__input--text" %>
    </div>
    <div class="form__field">
      <%= form.label :email, class: "label form__label" %>
      <%= form.text_field :email, class: "input input--text form__input--text" %>
    </div>
    <div class="form__field">
      <%= form.label :message, class: "label form__label" %>
      <%= form.text_area :message, class: "input input--textarea form__input--textarea" %>
    </div>
    <div class="form__actions">
      <%= form.submit "Submit", class: "button button--primary form__button" %>
    </div>
  <% end %>
  <div class="thanks">
    <h2>Thanks for reaching out.</h2>
    <p>The robuts are delivering the mail, and we'll be in touch soon!</p>
  </div>
<% end %>
